<?xml version="1.0" encoding="gb2312"?>
<!--++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
节点: item
*.id,name: 合成卡标识
*.ip,port: 合成卡地址
*.enable: 1,启用;其它,关闭

节点: content
*.truck: 车牌号宏定义
*.sleep: 多车牌时,两个车牌号的间隔
*.text: 待播发的语音内容
*.times: 重复播发次数
*.interval: 重发间隔,单位秒
*.repeat: 单次内容循环次数
*.reinterval: 单次内容循环间隔

节点: comport
*.port: 端口
*.baud: 波特率
*.data_bits: 数据位
*.stop_bits: 启停位
+++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++-->
<remotevoice>
  <item>
    <id>voice</id>
    <name>语音合成服务</name>
    <ip>127.0.0.1</ip>
    <port>8001</port>
    <enable>1</enable>
  </item>
  <content>
    <truck>tk</truck>
    <sleep>650</sleep>
    <text>请[p500]tk进厂,提货道号请看大屏幕</text>
    <times>3</times>
    <interval>180</interval>
    <repeat>2</repeat>
    <reinterval>1200</reinterval>
  </content>
  <comport>
    <port>com4</port>
    <baud>9600</baud>
    <data_bits>8</data_bits>
    <stop_bits>1</stop_bits>
  </comport>
</remotevoice>
